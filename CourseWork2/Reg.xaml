<Window x:Class="CourseWork2.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2"
        mc:Ignorable="d"
        Title="Регистрация" Height="1000" Width="1400" WindowStartupLocation="CenterScreen">
    <Grid Background="#ffdadada">
        <Border MinWidth="300" MinHeight="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="700" MaxHeight="700" CornerRadius="20" Cursor="">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Вас приветствует регистратура онлайн" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
                <Grid Margin="15 15 15 40">
                    <Button x:Name="regButton1" HorizontalAlignment ="Left" Content="Регистрация" Background="SkyBlue" Foreground="White" Padding="7" BorderBrush="Transparent"></Button>
                    <Button x:Name="entryButton" HorizontalAlignment="Right" Content="Войти" Background="Transparent" Foreground="SkyBlue" Padding="7" BorderBrush="Transparent" Click="EntryButton_Click" Cursor="Hand"></Button>
                </Grid >
                <TextBox x:Name="textBoxLogin" materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}" MaxWidth="300"></TextBox>
                <TextBox x:Name="textBoxEmail" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" MaxWidth="300"></TextBox>
                <PasswordBox x:Name="passBox1" materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" MaxWidth="300"></PasswordBox>
                <PasswordBox x:Name="passBox2" materialDesign:HintAssist.Hint="Повторите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" MaxWidth="300"></PasswordBox>
                <Button x:Name="regButton2" Content="Зарегистрироваться" Margin="15" Background="SkyBlue" Foreground="White" BorderBrush="Transparent" Cursor="Hand" Click="Button_Reg_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
