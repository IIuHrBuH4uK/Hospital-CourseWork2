<Window x:Class="CourseWork2.MainMenu"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="1000" Width="1400" WindowStartupLocation="CenterScreen" Cursor="">

    <Grid Background="#ffdadada">
        <Border MinWidth="400" MinHeight="300" 
            Margin="30" Background="White" 
            CornerRadius="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" Cursor="">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="75*"/>
                </Grid.ColumnDefinitions>

                <!-- Меню слева -->
                <Grid x:Name="GridMenu" Background="SkyBlue" VerticalAlignment="Stretch" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="20*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Source="/Assets/MainMenuBackground.jpg" Stretch="Fill" Grid.ColumnSpan="2"/>

                    <!-- Кнопка "Записаться на приём к врачу" -->
                    <Button Grid.Row="2" x:Name="SignUpDoctorButton" Click="SignUpDoctorButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                            <materialDesign:PackIcon Kind="PlusCircleOutline" Foreground="White" Height="30" Width="30" Margin="0,-2,5,-5"/>
                            <TextBlock Text="Записаться на приём к врачу" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Личный кабинет" -->
                    <Button Grid.Row="1" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10" x:Name="Person_Account_Button" Click="Person_Account_Button_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Account" Foreground="White" Height="30" Width="30" Margin="0,-2,10,0"/>
                            <TextBlock Text="Личный кабинет" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <TextBlock Margin="0,0,-75,250" />

                    <!-- Кнопка "Вызов врача на дом" -->
                    <Button Grid.Row="3" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10" x:Name="CallDoctor_Button" Click="CallDoctor_Button_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountHeart" Foreground="White" Height="30" Width="30" Margin="0,0,10,0"/>
                            <TextBlock Text="Вызов врача на дом" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Записи и обращения" -->
                    <Button Grid.Row="4" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="RefreshCircle" Foreground="White" Height="30" Width="30" Margin="0,-2,10,-5"/>
                            <TextBlock Text="Записи и обращения" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "О приложении" -->
                    <Button Grid.Row="5" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="QuestionMarkCircle" Foreground="White" Height="30" Width="30" Margin="0,-2,10,-5"/>
                            <TextBlock Text="О приложении" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Выход" -->
                    <Button Grid.Row="6" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10" x:Name="ExitButton" Click="ExitButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ExitRun" Foreground="White" Height="30" Width="30" Margin="0,-2,10,-5"/>
                            <TextBlock Text="Выход" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Панель главного экрана -->
                <StackPanel Grid.Column="1" x:Name="MainMenuPanel" Margin="10" d:IsHidden="True">
                    <TextBlock x:Name="TitleMainMenu_TextBlock" Text="Регистратура онлайн" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="DescriptionMainMenu_TextBlock" Text="Регистратура онлайн — это удобное место, где собрана вся информация о ваших медицинских записях. Здесь вы можете легко записаться на прием к врачу, выбрать удобное время визита, а при необходимости — оформить вызов врача на дом. Кроме того, у вас всегда под рукой история всех записей и обращений, чтобы вы могли следить за своим здоровьем. Мы стремимся сделать процесс медицинского обслуживания удобным и доступным. Используйте все возможности сервиса и будьте здоровы!" TextWrapping="Wrap" FontSize="20" Padding="20" Margin="10" HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>

                <!-- Панель личного кабинета -->
                <StackPanel Grid.Column="1" x:Name="PersonAccountPanel" Background="White" Margin="10" Visibility="Visible" d:IsHidden="True">
                    <TextBlock x:Name="TitlePersonAccount_TextBlock" Text="Личный кабинет" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Grid x:Name="PersonAccount_Grid"  VerticalAlignment="Stretch" Margin="0 10 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="75*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Фамилия" Grid.Row="0" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Имя" Grid.Row="1" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Отчество" Grid.Row="2" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Пол" Grid.Row="3" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Дата рождения" Grid.Row="4" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="СНИЛС" Grid.Row="5" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Адрес прописки" Grid.Row="6" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="textBoxSurname" materialDesign:HintAssist.Hint="Фамилия" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="textBoxName" materialDesign:HintAssist.Hint="Имя" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="textBoxPatronymic" materialDesign:HintAssist.Hint="Отчество" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="GenderCombobox" VerticalAlignment="Stretch" materialDesign:HintAssist.Hint="Пол" Style="{StaticResource MaterialDesignFilledComboBox}" FontSize="16" SelectedIndex="-1">
                            <ComboBoxItem>Мужской</ComboBoxItem>
                            <ComboBoxItem>Женский</ComboBoxItem>
                            <ComboBoxItem>Другое</ComboBoxItem>
                        </ComboBox>
                        <DatePicker Grid.Row="4" Grid.Column="1" x:Name="PersonBirthDay_DatePicker" materialDesign:HintAssist.Hint="Дата рождения" Style="{StaticResource MaterialDesignFilledDatePicker}" FontSize="16" Cursor=""></DatePicker>
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="textBoxSnils" materialDesign:HintAssist.Hint="СНИЛС" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="textBoxLocation" materialDesign:HintAssist.Hint="Адрес прописки" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                    </Grid>
                    <Button Content="Сохранить" Margin="0 30 0 0" HorizontalAlignment="Center" Background="SkyBlue" x:Name="SafePersonButton" Click="SafePersonButton_Click"></Button>
                </StackPanel>

                <!-- Панель записи на приём -->
                <StackPanel Grid.Column="1" x:Name="SignUpDoctorPanel" Background="White" Margin="10" Visibility="Visible" d:IsHidden="True">
                    <TextBlock x:Name="TitleSignUpDoctor_TextBlock" Text="Запись на приём к врачу" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
                    <Grid x:Name="Steps" Margin="0 20 0 0" d:IsHidden="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40*"></RowDefinition>
                            <RowDefinition Height="20*"></RowDefinition>
                            <RowDefinition Height="30*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button x:Name="Step1Button" Content="Шаг 1" materialDesign:ButtonAssist.CornerRadius="3" Height="30" Width="80" Background="SkyBlue" BorderBrush="SkyBlue" Foreground="White" Click="Step1Button_Click" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"></Button>
                        <Button x:Name="Step2Button" Content="Шаг 2" materialDesign:ButtonAssist.CornerRadius="3" Height="30" Width="80" Background="Transparent" BorderBrush="SkyBlue" Foreground="SkyBlue" Click="Step2Button_Click" Grid.Column="1" Grid.Row="0" IsEnabled="False" HorizontalAlignment="Center"/>
                        <Button x:Name="Step3Button" Content="Шаг 3" materialDesign:ButtonAssist.CornerRadius="3" Height="30" Width="80" Background="Transparent" BorderBrush="SkyBlue" Foreground="SkyBlue" Click="Step3Button_Click" Grid.Column="2" Grid.Row="0" IsEnabled="False" HorizontalAlignment="Center"></Button>
                        <Button x:Name="Step4Button" Content="Шаг 4" materialDesign:ButtonAssist.CornerRadius="3" Height="30" Width="80" Background="Transparent" BorderBrush="SkyBlue" Foreground="SkyBlue" Click="Step4Button_Click" Grid.Column="3" Grid.Row="0" IsEnabled="False" HorizontalAlignment="Center"></Button>
                        <Button x:Name="Step5Button" Content="Шаг 5" materialDesign:ButtonAssist.CornerRadius="3" Height="30" Width="80" Background="Transparent" BorderBrush="SkyBlue" Foreground="SkyBlue" Click="Step5Button_Click" Grid.Column="4 " Grid.Row="0" IsEnabled="False" HorizontalAlignment="Center" Cursor="Hand"></Button>
                        <TextBlock Text="Выбор населенного пункта" Grid.Column="0" Grid.Row="1" FontSize="10" Foreground="Gray"  HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="" Grid.Column="0" Grid.Row="2" FontSize="12" Foreground="Gray"  x:Name="CityTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="Выбор учреждения" Grid.Column="1" Grid.Row="1" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="" Grid.Column="1" Grid.Row="2" FontSize="12" Foreground="Gray"  x:Name="HospitalTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="Выбор специализации" Grid.Column="2" Grid.Row="1" FontSize="10" Foreground="Gray"  HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="" Grid.Column="2" Grid.Row="2" FontSize="12" Foreground="Gray"  x:Name="SpecTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="Выбор врача" Grid.Column="3" Grid.Row="1" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="" Grid.Column="3" Grid.Row="2" FontSize="12" Foreground="Gray"  x:Name="DoctorTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="Проверка" Grid.Column="4" Grid.Row="1" FontSize="10" Foreground="Gray"  HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="" Grid.Column="4" Grid.Row="2" FontSize="12" Foreground="Gray"  x:Name="TimeTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
                    </Grid>
                    <!-- Шаг 1 -->
                    <Grid x:Name="Steps_Grid">
                        <StackPanel x:Name="RegionPanel" Visibility="Visible" Panel.ZIndex="1" d:IsHidden="True">
                            <TextBox materialDesign:HintAssist.Hint="Поиск по названию" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="50 10 50 0" x:Name="Search_TextBox" TextChanged="SearchRegion"></TextBox>
                            <ListView x:Name="Region_ListView" SelectionChanged="Region_ListView_SelectionChanged" Margin="0 10 0 0" Height="720" >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <VirtualizingStackPanel/>
                                            <Label Content="{Binding Reg}"></Label>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Шаг 2 -->
                        <StackPanel x:Name="HospPanel" Visibility="Collapsed" d:IsHidden="True">
                            <TextBox materialDesign:HintAssist.Hint="Поиск по названию или адресу" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="50 10 50 0" x:Name="SearchHosp_TextBox" TextChanged="SearchHosp"></TextBox>
                            <ListView x:Name="Hosp_ListView" SelectionChanged="Hosp_ListView_SelectionChanged" Margin="0 10 0 0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel >
                                            <VirtualizingStackPanel/>
                                            <Label Content="{Binding Hosp}"></Label>
                                            <Label Content="{Binding Address}" FontSize="10" Foreground="Gray"></Label>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Шаг 3 -->
                        <StackPanel x:Name="SpecPanel" Visibility="Collapsed" Grid.Column="1" d:IsHidden="True">
                            <TextBox materialDesign:HintAssist.Hint="Поиск по специальности" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="50 10 50 0" x:Name="SearchSpec_TextBox" TextChanged="SearchSpec"></TextBox>
                            <ListView x:Name="Spec_ListView" SelectionChanged="Spec_ListView_SelectionChanged" Margin="0 10 0 0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel >
                                            <VirtualizingStackPanel/>
                                            <Label Content="{Binding Spec}"></Label>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                        <!-- Шаг 4 -->
                        <StackPanel x:Name="DoctorPanel" Visibility="Collapsed" Grid.Column="1" d:IsHidden="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40*"></ColumnDefinition>
                                    <ColumnDefinition Width="60*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBox materialDesign:HintAssist.Hint="Поиск по ФИО" Grid.Column="0" Grid.Row="0" Style="{StaticResource MaterialDesignFilledTextBox}" Margin="0 10 10 0" x:Name="SearchDoctor_TextBox" TextChanged="SearchDoctor" Cursor=""/>
                                <Button x:Name="PrevWeek_Button" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Content="Предыдущая неделя" Background="Transparent" Foreground="SkyBlue" BorderBrush="SkyBlue" Click="PrevWeek_Button_Click"></Button>
                                <TextBlock x:Name="interval_time" Grid.Column="1" Grid.Row="0" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"></TextBlock>
                                <Button x:Name="NextWeek_Button" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Content="Следующая неделя" Background="Transparent" Foreground="SkyBlue" BorderBrush="SkyBlue" Click ="NextWeek_Button_Click"></Button>
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Врач" Foreground="Gray" FontSize="14" Margin="20 0 0 0" VerticalAlignment="Bottom"></TextBlock>

                                <StackPanel x:Name="DatesPanel" Grid.Column="1" Grid.Row="1" Cursor="" >
                                    <Grid Grid.Row="1" Grid.Column="1" Margin="0 10 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- День недели -->
                                        <TextBlock x:Name="Day0" Grid.Column="0" Grid.Row="0" Text="Сегодня" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                        <TextBlock x:Name="Day1" Grid.Column="1" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Day2" Grid.Column="2" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Day3" Grid.Column="3" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Day4" Grid.Column="4" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Day5" Grid.Column="5" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Day6" Grid.Column="6" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>

                                        <!-- Дата -->
                                        <TextBlock x:Name="Date0" Grid.Column="0" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                                        <TextBlock x:Name="Date1" Grid.Column="1" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Date2" Grid.Column="2" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Date3" Grid.Column="3" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Date4" Grid.Column="4" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Date5" Grid.Column="5" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                        <TextBlock x:Name="Date6" Grid.Column="6" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="Gray"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <ListView x:Name="Doctor_ListView" Margin="0 10 0 0">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition></RowDefinition>
                                                        <RowDefinition></RowDefinition>
                                                        <RowDefinition></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Label Content="{Binding Name}" Grid.Column="0" Grid.Row="0"></Label>
                                                    <Label Content="{Binding Age}" Grid.Column="0" Grid.Row="1"></Label>
                                                    <Label Content="{Binding Exp}" Grid.Column="0" Grid.Row="2"></Label>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1">
                                    <ListView x:Name="DoctorTime_ListView" Margin="0 10 0 0" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="0"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="90"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <VirtualizingStackPanel/>
                                                    <Button Tag="{Binding}" CommandParameter="0" IsEnabled="True" Content="{Binding Time}" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                    <Button Tag="{Binding}" CommandParameter="1" IsEnabled="True" Content="{Binding Time}" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                    <Button Tag="{Binding}" CommandParameter="2" IsEnabled="True" Content="{Binding Time}" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                    <Button Tag="{Binding}" CommandParameter="3" IsEnabled="True" Content="{Binding Time}" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                    <Button Tag="{Binding}" CommandParameter="4" IsEnabled="True" Content="{Binding Time}" Grid.Column="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                    <Button Tag="{Binding}" CommandParameter="5" IsEnabled="True" Content="{Binding Time}" Grid.Column="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                    <Button Tag="{Binding}" CommandParameter="6" IsEnabled="True" Content="{Binding Time}" Grid.Column="6" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Margin="5" BorderBrush="SkyBlue" Foreground="White" Background="SkyBlue" Click="TimeButton_Click" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>

                            </Grid>
                        </StackPanel>

                        <!-- Шаг 5 -->
                        <StackPanel x:Name="CheckPanel" Visibility="Visible" Grid.Column="1" Margin="0 10 0 0" Cursor="">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*"></ColumnDefinition>
                                    <ColumnDefinition Width="70*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Выбранная область:" Grid.Column="0" Grid.Row="0" FontSize="20" Margin="10"></TextBlock>
                                <TextBlock Text="Выбранная больница:" Grid.Column="0" Grid.Row="1" FontSize="20" Margin="10"></TextBlock>
                                <TextBlock Text="Выбранная специальность:" Grid.Column="0" Grid.Row="2" FontSize="20" Margin="10"></TextBlock>
                                <TextBlock Text="Выбранный врач:" Grid.Column="0" Grid.Row="3" FontSize="20" Margin="10"></TextBlock>
                                <TextBlock Text="Выбранное дата и время:" Grid.Column="0" Grid.Row="4" FontSize="20" Margin="10"></TextBlock>
                                <TextBox x:Name="SelectedRegion" Text="" Grid.Column="1" Grid.Row="0" FontSize="20" Focusable="False"></TextBox>
                                <TextBox x:Name="SelectedHospital" Text="" Grid.Column="1" Grid.Row="1" FontSize="20" Focusable="False"></TextBox>
                                <TextBox x:Name="SelectedSpecialization" Text="" Grid.Column="1" Grid.Row="2" FontSize="20" Focusable="False"></TextBox>
                                <TextBox x:Name="SelectedDoctor" Text="" Grid.Column="1" Grid.Row="3" FontSize="20" Focusable="False"></TextBox>
                                <TextBox x:Name="SelectedDate" Text="" Grid.Column="1" Grid.Row="4" FontSize="20" Focusable="False"></TextBox>
                            </Grid>
                            <Grid Margin="0 40 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
