<Window x:Class="CourseWork2.MainMenu"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="1000" Width="1400" WindowStartupLocation="CenterScreen">

    <Grid Background="#ffdadada">
        <Border MinWidth="400" MinHeight="300" 
            Margin="30" Background="White" 
            CornerRadius="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="75*"/>
                </Grid.ColumnDefinitions>

                <!-- Меню слева -->
                <Grid x:Name="GridMenu" Background="SkyBlue" VerticalAlignment="Stretch" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="20*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Source="/MainMenuBackground.jpg" Stretch="Fill" Grid.ColumnSpan="2"/>
                    
                    <!-- Кнопка "Записаться на приём к врачу" -->
                    <Button Grid.Row="2" x:Name="SignUpDoctorButton" Click="SignUpDoctorButton_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                            <materialDesign:PackIcon Kind="PlusCircleOutline" Foreground="White" Height="30" Width="30" Margin="0,-2,5,-5"/>
                            <TextBlock Text="Записаться на приём к врачу" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Личный кабинет" -->
                    <Button Grid.Row="1" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10" x:Name="Person_Account_Button" Click="Person_Account_Button_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Account" Foreground="White" Height="30" Width="30" Margin="0,-2,10,0"/>
                            <TextBlock Text="Личный кабинет" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Вызов врача на дом" -->
                    <Button Grid.Row="3" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountHeart" Foreground="White" Height="30" Width="30" Margin="0,0,10,0"/>
                            <TextBlock Text="Вызов врача на дом" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Записи и обращения" -->
                    <Button Grid.Row="4" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="RefreshCircle" Foreground="White" Height="30" Width="30" Margin="0,-2,10,-5"/>
                            <TextBlock Text="Записи и обращения" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "О приложении" -->
                    <Button Grid.Row="5" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="QuestionMarkCircle" Foreground="White" Height="30" Width="30" Margin="0,-2,10,-5"/>
                            <TextBlock Text="О приложении" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Кнопка "Выход" -->
                    <Button Grid.Row="6" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,0,10" x:Name="ExitButton" Click="ExitButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ExitRun" Foreground="White" Height="30" Width="30" Margin="0,-2,10,-5"/>
                            <TextBlock Text="Выход" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Панель главного экрана -->
                <StackPanel Grid.Column="1" x:Name="MainMenuPanel">
                    <TextBlock Text="Регистратура онлайн" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="   Регистратура онлайн — это удобное место, где собрана вся информация о ваших медицинских записях. Здесь вы можете легко записаться на прием к врачу, выбрать удобное время визита, а при необходимости — оформить вызов врача на дом. Кроме того, у вас всегда под рукой история всех записей и обращений, чтобы вы могли следить за своим здоровьем. Мы стремимся сделать процесс медицинского обслуживания удобным и доступным. Используйте все возможности сервиса и будьте здоровы!" TextWrapping="Wrap" FontSize="20" Padding="20" Margin="10" HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>

                <!-- Панель личного кабинета -->
                <StackPanel Grid.Column="1" x:Name="PersonAccountPanel" Background="White" Margin="10" Visibility="Hidden">
                    <TextBlock Text="Личный кабинет" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Grid VerticalAlignment="Stretch" Margin="0 10 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*" />
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="75*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Фамилия" Grid.Row="0" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Имя" Grid.Row="1" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Отчество" Grid.Row="2" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="СНИЛС" Grid.Row="3" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBlock Text="Адрес прописки" Grid.Row="4" Grid.Column="0" Padding="10" FontSize="20"></TextBlock>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="textBoxSurname" materialDesign:HintAssist.Hint="Фамилия" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="textBoxName" materialDesign:HintAssist.Hint="Имя" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="textBoxPatronymic" materialDesign:HintAssist.Hint="Отчество" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="textBoxSnils" materialDesign:HintAssist.Hint="СНИЛС" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="textBoxLocation" materialDesign:HintAssist.Hint="Адрес прописки" Style="{StaticResource MaterialDesignFilledTextBox}" FontSize="16"></TextBox>
                    </Grid>
                    <Button Content="Сохранить" Margin="0 30 0 0" HorizontalAlignment="Center" Background="SkyBlue" x:Name="SafePersonButton" Click="SafePersonButton_Click"></Button>
                </StackPanel>

                <!-- Панель записи на приём -->
                <StackPanel Grid.Column="1" x:Name="SignUpDoctorPanel" Background="White" Margin="10">
                    <TextBlock Text="Запись на приём к врачу" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
                    <Grid>
                        
                    </Grid>
                </StackPanel>
            </Grid>

        </Border>
    </Grid>

</Window>
